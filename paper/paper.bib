  copyright     = {arXiv.org perpetual, non-exclusive license},
  doi           = {10.48550/ARXIV.2212.01666},
  eprint        = {2212.01666},
  file          = {:Dlotko2022 - Euler Characteristic Curves and Profiles_ a Stable Shape Invariant for Big Data Problems.pdf:PDF:http\://arxiv.org/pdf/2212.01666v1;:DirectionalTransform/Dlotko2022.pdf:PDF},
  keywords      = {Algebraic Topology (math.AT), Computational Geometry (cs.CG), Machine Learning (cs.LG), FOS: Mathematics, FOS: Computer and information sciences},
  primaryclass  = {math.AT},
  publisher     = {arXiv},
}

@Article{Wang2022,
