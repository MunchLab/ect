  doi           = {10.48550/ARXIV.2203.09087},
  eprint        = {2203.09087},
  file          = {:Wang2022 - GPU Computation of the Euler Characteristic Curve for Imaging Data.pdf:PDF:http\://arxiv.org/pdf/2203.09087v2;:DirectionalTransform/Wang2022.pdf:PDF},
  keywords      = {Computational Geometry (cs.CG), FOS: Computer and information sciences},
  primaryclass  = {cs.CG},
  publisher     = {arXiv},
}

